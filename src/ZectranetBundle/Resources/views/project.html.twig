{% extends '@Zectranet/index.html.twig' %}

{% block title %}{{ project.name }}{% endblock %}

{% block body %}
    <div class="page-header">
        <i class="fa fa-briefcase fa-2x"></i>
        <span style="font-size: 25px;">{{ project.name }}</span>

        <!-- Begin of Project controll buttons -->
        {% if project.owner.id == app.user.id or (is_granted('ROLE_ADMIN')) %}
            <a href="#" style="text-decoration: none;">
                <i class="fa fa-fw fa-gear" style="font-size: 20px;"></i>
            </a>

            <a href="#" style="text-decoration: none;" data-toggle="modal" data-target="#delete_private_project">
                <i class="fa fa-fw fa-trash" style="color: red; font-size: 20px;"></i>
            </a>
        {% endif %}
        <!-- End of Project controll buttons -->
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default list-group">
                <div class="list-group-item active">
                    <i class="fa fa-tasks"></i>
                    <span>Tasks</span>
                </div>
                <div class="panel-body">
                    <ul id="myTab" class="nav nav-tabs" role="tablist">
                        <li data-toggle="tooltip" data-placement="top" title="Table view" role="presentation" class="active">
                            <a data-toggle="tab" id="task-view-table" class="btn" href="#table-view" aria-controls="table-view" role="tab" aria-expanded="true">
                                <i class="fa fa-table fa-2x"></i>
                            </a>
                        </li>
                        <li data-toggle="tooltip" data-placement="top" title="List view" role="presentation">
                            <a data-toggle="tab" id="task-view-list" class="btn" href="#list-view" aria-controls="list-view" role="tab" aria-expanded="false">
                                <i class="fa fa-list fa-2x"></i>
                            </a>
                        </li>
                        <li data-toggle="tooltip" data-placement="top" title="Agile view" role="presentation">
                            <a data-toggle="tab" id="task-view-agile"  class="btn" href="#agile-view" aria-controls="agile-view" role="tab" aria-expanded="false">
                                <i class="fa fa-th fa-2x"></i>
                            </a>
                        </li>
                        <li data-toggle="tooltip" data-placement="top" title="Add new task" role="presentation">
                            <a style="cursor: pointer" data-toggle="modal" data-target="#add_new_task" href="#">
                                <i class="fa fa-plus fa-2x"></i>
                            </a>
                        </li>
                    </ul>

                    <div id="tasks-tab-content" class="tab-content" ng-controller="TaskController" ng-init="getTasks()">

                        <div id="table-view" class="tab-pane fade in active" aria-labelledby="task-view-table" role="tabpanel">
                            <table class="table" >
                                <div ng-repeat="task in tasks"></div>
                                <thead>
                                    <tr>
                                        <th class="col-xs-1">ID</th>
                                        <th class="col-xs-2">Name</th>
                                        <th class="col-xs-1 hidden-sm hidden-xs">Priority</th>
                                        <th class="col-xs-1">Status</th>
                                        <th class="col-xs-1">Progress</th>
                                        <th class="col-xs-1 hidden-sm hidden-xs">Estimated</th>
                                        <th class="col-xs-1 hidden-sm hidden-xs">Start Date</th>
                                        <th class="col-xs-1 hidden-sm hidden-xs">End Date</th>
                                        <th class="col-xs-1 hidden-sm hidden-xs">Owner</th>
                                        <th class="col-xs-1">Assigned</th>
                                        <th class="col-xs-1">Operations</th>
                                    </tr>
                                </thead>

                                {% for task in project.tasks %}
                                    {% if task.parent == null %}
                                        <tbody>
                                        <tr>
                                            <td class="col-xs-1">{{ task.id }}{{ (task.type.label == 'bug') ? '.B' : '' }}</td>
                                            <td class="col-xs-3">
                                                {% if task.subtasks | length > 0 %}
                                                    <a data-toggle="collapse" href="#task{{ task.id }}" aria-expanded="false" class="collapsed" style="text-decoration: none;">
                                                        <i class="fa fa-plus"></i>
                                                    </a>
                                                {% endif %}
                                                <a>{{ task.name }}</a>
                                            </td>
                                            <td class="col-xs-1 hidden-sm hidden-xs">{{ task.priority.label }}</td>
                                            <td class="col-xs-1">{{ task.status.label }}</td>
                                            <td class="col-xs-1">{{ task.progress }}%</td>
                                            <td class="col-xs-1 hidden-sm hidden-xs">{{ task.estimatedHours ~ ' h ' ~ task.estimatedMinutes ~ ' m'}}</td>
                                            <td class="col-xs-1 hidden-sm hidden-xs">{{ task.startdate is empty ? '-' : task.startdate | date('Y-m-d') }}</td>
                                            <td class="col-xs-1 hidden-sm hidden-xs">{{ task.enddate is empty ? '-' : task.enddate | date('Y-m-d') }}</td>
                                            <td class="col-xs-1 hidden-sm hidden-xs">{{ task.owner.name ~ ' ' ~ task.owner.surname}}</td>
                                            <td class="col-xs-1">
                                                {% if task.assigned %}
                                                    {{ task.assigned.name ~ ' ' ~ task.assigned.surname}}
                                                {% else %}
                                                    {{ '-' }}
                                                {% endif %}
                                            </td>
                                            <td class="col-xs-1">
                                                <a class="btn btn-primary btn-xs" data-toggle="modal" data-target="#add_new_subtask" href="#"
                                                   onclick="addParentToSubTask({{ task.id }})" style="width: 22px; height: 22px;">
                                                    <i class="fa fa-code-fork"></i>
                                                </a>
                                                <a class="btn btn-danger btn-xs" data-toggle="modal" data-target="#add_new_subtask" href="#"
                                                   onclick="addParentToSubTask({{ task.id }})" style="width: 22px; height: 22px;">
                                                    <i class="fa fa-trash"></i>
                                                </a>
                                                <a class="btn btn-default btn-xs" data-toggle="modal" data-target="#add_new_subtask" href="#"
                                                   onclick="addParentToSubTask({{ task.id }})" style="width: 22px; height: 22px;">
                                                    <i class="fa fa-stack-overflow"></i>
                                                </a>
                                            </td>
                                        </tr>
                                        </tbody>

