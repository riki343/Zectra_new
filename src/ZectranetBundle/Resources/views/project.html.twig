                            <thead>
                            <tr>
                                <th>User</th>
                                <th>Role</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for user in project.users %}
                                <tr>
                                    <td>
                                        <a href="#" style="display: block; text-decoration: none;">
                                            <img src="{{ asset('') ~ 'documents/' ~ user.avatar }}" class="img-circle"
                                                 style="width: 20px; height: 20px;">
                                            {{ user.name ~ ' ' ~ user.surname ~ ' (' ~ user.username ~ ')'}}
                                        </a>
                                    </td>
                                    <td>Manager</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    {% elseif project.users|length == 0 %}
                        <h4 class="text-info text-center">Users will be displayed here</h4>
                    {% endif %}
                </div>
            </div>
        </div>
        <!-- END OF OFFICE USERS PANEL -->

        <!-- BEGIN OF CHAT PANEL -->
        <div class="chat-panel list-group col-md-8" ng-controller="ChatController" ng-init="getPosts(0, 100)">
            <div class="list-group-item active">
                <i class="fa fa-comments fa-fw"></i>
                Project Chat
            </div>
            <div class="list-group-item panel-body" style="max-height: 300px;">
                {% if project.postsProject | length == 0 %}
                    <h4 class="text-info text-center vertical-center">Posts will be displayed here</h4>
                {% endif %}
                <ul class="chat">
                    <li ng-repeat="post in posts" class="clearfix" ng-class="{'right': {{ app.user.id }} == post.user.id, 'left': {{ app.user.id }} != post.user.id }">
                        <span class="chat-img"
                              ng-class="{'pull-right': {{ app.user.id }} == post.user.id, 'pull-left': {{ app.user.id }} != post.user.id }"
                              ng-init="avatar = generateAsset('{{ asset('') }}', 'documents/' + post.user.avatar)">
                            <img src="#" ng-src="[[avatar]]" alt="User Avatar" class="img-circle" style="width: 50px; height: 50px;"/>
                        </span>
                        <div class="chat-body clearfix">
                            <div class="header" style="height: 28px;">
                                <strong class="primary-font"
                                        ng-class="{'pull-right': {{ app.user.id }} == post.user.id, 'pull-left': {{ app.user.id }} != post.user.id }">
                                    [[post.user.name + ' ' + post.user.surname + ' (' + post.user.username + ')' ]]
                                </strong>

                                <small class="text-muted" ng-class="{'pull-left': {{ app.user.id }} == post.user.id, 'pull-right': {{ app.user.id }} != post.user.id }">
                                    <i class="fa fa-clock-o fa-fw"></i>
                                    Posted on [[post.posted]]
                                    <i ng-if="post.edited" class="fa fa-edit"></i>
                                </small>
                            </div>
                            <pre style="white-space: pre-line;">
                                <span>
                                    [[ post.message ]]
                                </span>
                            </pre>
                        </div>
                    </li>
                </ul>
            </div>
            <div class="list-group-item" >
                <form class="input-group input-group-lg">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="button" style="height: 65px;">
                        <i class="fa fa-file"></i>
                    </button>
                </span>
                    <textarea id="textarea-post" name="message" class="form-control" rows="3" style="font-size: 11px; height: 65px;" ng-keypress="pressEnter($event)" ng-model="message"></textarea>
                <span class="input-group-btn">
                    <button class="btn btn-primary" name="subscribe" type="button" style="height: 65px; font-size:15px;" ng-click="SendPost(message)">
                        <span>Post</span>
                    </button>
                </span>
                </form>
                <div id="slide-down-menu-screenshots" style="display: none;">
                    <div id="div-screenshot" style="display: none; width: auto;height: auto;">

                    </div>
                    <button class="btn text-white bg-primary send-message" type="button" id="send-message" ng-click="InsertScreenshotsInChat()" style="width: 100%; height: 40px; margin-top: 10px;">Insert Screenshots in chat</button>
                </div>
            </div>
        </div>
        <!-- END OF CHAT PANEL -->
    </div>
