                                                    <td class="col-xs-1">
                                                        {{ task.id }}.{{ i + 1 }}{% if (task.subtasks[i].type.label == 'bug') %}{{ 'B' }}{% elseif (task.subtasks[i].type.label == 'improvement') %}{{ 'I' }}{% endif %}
                                                    </td>
                                                    <td class="col-xs-3">
                                                        {{ task.subtasks[i].name }}
                                                    </td>
                                                    <td class="col-xs-1 hidden-sm hidden-xs">{{ task.subtasks[i].priority.label }}</td>
                                                    <td class="col-xs-1">{{ task.subtasks[i].status.label }}</td>
