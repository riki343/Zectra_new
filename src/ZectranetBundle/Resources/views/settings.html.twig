{% extends '@Zectranet/index.html.twig' %}

{% block title %} Settings {% endblock %}

{% block body %}

    <div class="row">
        <ol class="breadcrumb" style="margin: 0 -15px;">
            <li>
                <a href="{{ path('zectranet_user_page', {'user_id': app.user.id}) }}">{{ app.user.username }}</a>
            </li>
            <li class="active">Settings</li>
        </ol>

        {% if mes is defined %}
            <div class="form-group" style="max-width: 350px; margin-top: 30px;">
                <div class="alert alert-warning alert-dismissible fade in" role="alert">
                    <button class="close" aria-label="Close" data-dismiss="alert" type="button">
                        <span aria-hidden="true">Ã—</span>
                    </button>
                    {% if mes == 0 %}
                        Invalid Current password!

                    {% elseif mes == 1 %}
                        New password and Repeated new password did not match!

                    {% elseif mes == 2 %}
                        Password changed successfully!

                    {% endif %}

                </div>
            </div>
        {% endif %}

        <!-- General settings -->
        <form method="post" action="{{ path('zectranet_user_settings_general') }}" style="margin-top: 20px;">

            <div class="form-group">
                <div style="font-size: 1.2em;">General</div>
                <div style="height: 1px; background-color: #e5e5e5;"></div>
            </div>

            <div class="row">
                <div class="col-xs-12">
                    <div class="col-xs-2"></div>
                    <div class="col-xs-10">
                        <div class="form-group">
                            <input type="checkbox" name="showClosedProjects" {% if (app.user.userSettings.showClosedProjects) %}checked{% endif %}>
                            Show closed projects
                        </div>

                        <div class="form-group">
                            <input type="submit" class="btn btn-primary" value="Save" style="margin: 15px 0;">
                        </div>
                    </div>
                </div>
            </div>

        </form>
        <!-- End General settings -->

        <!-- Notification on Email -->
        <form method="post" action="{{ path('zectranet_user_settings_email') }}" style="margin-top: 20px;">

            <div class="form-group">
                <div style="font-size: 1.2em;">Notification on Email</div>
                <div style="height: 1px; background-color: #e5e5e5;"></div>
            </div>

            <div class="row">
                <div class="col-xs-12">
                    <div class="col-xs-2"></div>
                    <div class="col-xs-10">

                        <div class="form-group">
                            <input type="checkbox" name="disableAllOnEmail" {% if (app.user.userSettings.disableAllOnEmail) %}checked{% endif %}>
                            Disable all notifications on email
                        </div>

                        {#
                        <div class="form-group">
                            <input type="checkbox" name="msgEmailMessageOffice" {% if (app.user.userSettings.msgEmailMessageOffice) %}checked{% endif %}>
                            New message in office
                        </div>

                        <div class="form-group">
                            <input type="checkbox" name="msgEmailMessageProject" {% if (app.user.userSettings.msgEmailMessageProject) %}checked{% endif %}>
                            New message in project
                        </div>

                        <div class="form-group">
                            <input type="checkbox" name="msgEmailMessageEpicStory" {% if (app.user.userSettings.msgEmailMessageEpicStory) %}checked{% endif %}>
                            New message in epic story
                        </div>

                        <div class="form-group">
                            <input type="checkbox" name="msgEmailMessageTask" {% if (app.user.userSettings.msgEmailMessageTask) %}checked{% endif %}>
                            New message in task
                        </div>#}


                        <div class="form-group">
                            <input type="checkbox" name="msgEmailTaskAdded" {% if (app.user.userSettings.msgEmailTaskAdded) %}checked{% endif %}>
                            Task added
                        </div>

                        <div class="form-group">
                            <input type="checkbox" name="msgEmailEpicStoryAdded" {% if (app.user.userSettings.msgEmailEpicStoryAdded) %}checked{% endif %}>
                            Epic story added
                        </div>

                        <div class="form-group">
                            <input type="checkbox" name="msgEmailTaskDeleted" {% if (app.user.userSettings.msgEmailTaskDeleted) %}checked{% endif %}>
                            Task deleted
                        </div>

                        <div class="form-group">
                            <input type="checkbox" name="msgEmailEpicStoryDeleted" {% if (app.user.userSettings.msgEmailEpicStoryDeleted) %}{{'checked'}}{% endif %}>
                            Epic story deleted
                        </div>

                        <div class="form-group">
                            <input type="submit" class="btn btn-primary" value="Save" style="margin: 15px 0;">
                        </div>
                    </div>
                </div>
            </div>

        </form>
        <!-- End Notification on Email -->

        <!-- Notification on Site -->
        <form method="post" action="{{ path('zectranet_user_settings_site') }}" style="margin-top: 20px;">

            <div class="form-group">
                <div style="font-size: 1.2em;">Notification on Site</div>
                <div style="height: 1px; background-color: #e5e5e5;"></div>
            </div>

            <div class="row">
                <div class="col-xs-12">
                    <div class="col-xs-2"></div>
                    <div class="col-xs-10">

                        <div class="form-group">
                            <input type="checkbox" name="disableAllOnSite" {% if (app.user.userSettings.disableAllOnSite) %}checked{% endif %}>
                            Disable all notifications on site
                        </div>


                        <div class="form-group">
                            <input type="checkbox" name="msgSiteMessageOffice" {% if (app.user.userSettings.msgSiteMessageOffice) %}checked{% endif %}>
                            Notify about new message in office
                        </div>

                        <div class="form-group">
                            <input type="checkbox" name="msgSiteMessageProject" {% if (app.user.userSettings.msgSiteMessageProject) %}checked{% endif %}>
                            Notify about new message in project
                        </div>

                        <div class="form-group">
                            <input type="checkbox" name="msgSiteMessageEpicStory" {% if (app.user.userSettings.msgSiteMessageEpicStory) %}checked{% endif %}>
                            Notify about new message in epic story
                        </div>

                        <div class="form-group">
                            <input type="checkbox" name="msgSiteMessageTask" {% if (app.user.userSettings.msgSiteMessageTask) %}checked{% endif %}>
                            Notify about new message in task
                        </div>


                        <div class="form-group">
                            <input type="checkbox" name="msgSiteTaskAdded" {% if (app.user.userSettings.msgSiteTaskAdded) %}checked{% endif %}>
                            Notify about task added
                        </div>

                        <div class="form-group">
                            <input type="checkbox" name="msgSiteEpicStoryAdded" {% if (app.user.userSettings.msgSiteEpicStoryAdded) %}checked{% endif %}>
                            Notify about epic story added
                        </div>

                        <div class="form-group">
                            <input type="checkbox" name="msgSiteTaskDeleted" {% if (app.user.userSettings.msgSiteTaskDeleted) %}checked{% endif %}>
                            Notify about task deleted
                        </div>

                        <div class="form-group">
                            <input type="checkbox" name="msgSiteEpicStoryDeleted" {% if (app.user.userSettings.msgSiteEpicStoryDeleted) %}checked{% endif %}>
                            Notify about epic story deleted
                        </div>

                        <div class="form-group">
                            <input type="submit" class="btn btn-primary" value="Save" style="margin: 15px 0;">
                        </div>
                    </div>
                </div>
            </div>

        </form>
        <!-- End Notification on Site -->

        <form method="post" id="pswrdChange" action="{{ path('zectranet_user_settings_changePassword') }}" style="margin-top: 20px;">

            <div class="form-group">
                <div style="font-size: 1.2em;">Change password</div>
                <div style="height: 1px; background-color: #e5e5e5;"></div>
            </div>

            <!-- Change password -->
            <div class="row">
                <div class="col-xs-12">
                    <div class="col-xs-2"></div>
                    <div class="col-xs-10" style="max-width: 350px;">

                        <div class="form-group">
                            <span class="control-label">Current password:</span>
                            <input name="currentPassword" type="password" class="form-control" required>
                        </div>

                        <div class="form-group">
                            <span class="control-label">New password:</span>
                            <input name="newPassword" id="pswrd" type="password" class="form-control" required>
                        </div>

                        <div class="form-group">
                            <span class="control-label">Repeat new password:</span>
                            <input name="repeatNewPassword" id="rpswrd" type="password" class="form-control" required>
                        </div>

                        <div class="form-group">
                            <input type="submit" class="btn btn-primary" value="Save" style="margin: 15px 0;">
                        </div>
                    </div>
                </div>
            </div>
            <!-- End Change password -->

        </form>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/zectranet/js/notify.min.js') }}" type="text/javascript"></script>
    <script>
        $('#pswrdChange').on('submit', function(e) {
            var pswrd = $('#pswrd');
            var rpswrd = $('#rpswrd');
            if (pswrd.val() !== rpswrd.val()) {
                rpswrd.notify('Passwords do not match!', { position:"right" });
                return false;
            }
        });
    </script>
{% endblock %}