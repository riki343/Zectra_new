{% extends 'IntranetMainBundle::layout.html.twig' %}

{% block title %}Reset Password{% endblock %}

{% block styles %}
    {{ parent() }}
    <link href="{{ asset('bundles/intranet/css/resetPassword.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="row" style="margin-top:90px">
        <div class="col-md-12">
            <form class="classForm" method="post" action="{{ path('intranet_reset_password_save', {'userid': userid }) }}">
                <div class="containerForContent">
                    {% if messageError is defined %}
                        <div class="message">
                            {{ messageError }}
                        </div>
                    {% endif %}
                    {% if messageSuccess is defined %}
                        <div class="message1">
                            {{ messageSuccess }}
                        </div>
                    {% endif %}
                    <div class="form-group">
                        <span class="textUp">New Password</span>
                        <input type="password" name="newPassword" class="form-control" pattern="[A-Za-z-0-9]{4,20}" required>
                    </div>
                    <div class="form-group">
                        <span class="textUp">Repeat new Password</span>
                        <input type="password" name="repeatNewPassword" class="form-control" pattern="[A-Za-z-0-9]{4,20}" required>
                    </div>
                    <div class="buttonSend">
                        <input class="btn btn-primary" type="submit" value="Submit">
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}