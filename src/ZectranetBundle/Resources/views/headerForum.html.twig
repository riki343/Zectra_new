{% extends '@Zectranet/index.html.twig' %}

{% block title %}{{ forum.name }}{% endblock %}

{% block styles %}
    {{ parent() }}

    <link href="{{ asset('bundles/zectranet/css/QnAForum.css') }}" rel="stylesheet" type="text/css">

{% endblock %}

{% block body %}
    <div class="page-header">
        <div class="row">

            {% if forum.ownerID == app.user.id or (is_granted('ROLE_ADMIN')) %}

                <div class="col-md-9 col-xs-6" style="word-wrap: break-word; white-space: normal;">
                    <div ng-click="setFormEdit()" ng-mouseleave="setFormNone()" style="display: inline-block;">
                        <div ng-if="formStatus == 'formNone'" ng-mouseenter="setIconEdit()" ng-mouseleave="setIconNone()" id="spanLength" style="cursor: pointer;">
                            <span style="font-size: 30px; font-family: 'PT Sans Narrow', sans-serif; font-weight: bold; padding: 0 5px;">{{ forum.name }}</span>
                        <span ng-if="iconEdit" style="font-size: 30px; font-family: 'PT Sans Narrow', sans-serif; font-weight: bold; padding: 0 5px; border-left: 1px solid #ccc;">
                            <i style="color: #A9A6A6;" class="fa fa-edit"></i>
                        </span>
                        </div>
                        <form ng-class="formStatus" action="{{ path('zectranet_header_forum_edit_name', {'project_id' : forum.id}) }}" method="post">
                            <input id="inputName" ng-focus="focus = true" ng-blur="setBlure()" type="text" value="{{ forum.name }}" name="newName" class="form-control" style="height: 44px; font-size: 18px;" required>
                            <input type="submit" class="hidden">
                        </form>
                    </div>
                </div>

            {% else %}
                <div class="col-md-9 col-xs-6">
                    <span style="font-size: 30px; font-family: 'PT Sans Narrow', sans-serif; font-weight: bold;">{{ forum.name }}</span>
                </div>

            {% endif %}

            <div class="col-md-3 col-xs-6">
                {% if forum.ownerID == app.user.id or (is_granted('ROLE_ADMIN')) %}
                    <div class="pull-right">
                        <div class="pull-right" data-toggle="tooltip" data-placement="top" title="Delete This Project">
                            <a style="cursor: pointer; text-decoration: none;" data-toggle="modal" data-target="#delete_private_project">
                                <i class="fa text-danger fa-fw fa-trash  fa-2x"></i>
                            </a>
                        </div>

                        <div class="pull-right" data-toggle="tooltip" data-placement="top" title="Project Settings">
                            <a style="cursor: pointer; text-decoration: none;" href="{{ path('zectranet_show_header_forum_settings', {'project_id': forum.id}) }}">
                                <i class="fa text-primary fa-fw fa-gear fa-2x"></i>
                            </a>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <div class="col-xs-9 col-xs-offset-1">
            <h5>FORUM</h5>
        </div>
        <div class="col-xs-1">
            <h5>THREADS</h5>
        </div>
        <div class="col-xs-1">
            <h5>POSTS</h5>
        </div>
    </div>

        <div ng-controller="HeaderForumController" ng-init="getHeaders()">
            <div class="col-md-12 panel panel-default" style="margin-bottom: 0;"  ng-repeat="oneheader in headers">
                <div class="row">
                    <div class="col-md-12" style="color: [[ oneheader.headerTextColor ]]; background-color: [[ oneheader.headerBgColor ]];">
                        <h4 align="center">[[oneheader.title]]</h4>
                    </div>
                </div>

                <div class="row" style="padding: 0;margin:0px 15px 0px 15px;border-left: darkgray solid 1px;border-right: darkgray solid 1px;border-bottom: darkgray solid 1px;" ng-repeat="onesubheader in oneheader.subHeaders">
                    <div class="panel-body">
                        <div class="col-xs-1">
                            <img class="img-responsive" src="{{ asset('bundles/zectranet/img/forumlogo.jpg') }}" alt="subheader_image"/>
                        </div>
                        <div class="col-xs-9">
                            <h4>
                                <a class="text-info" href="[[onesubheader.urlShowHeaderForumSubheader]]">
                                    [[ onesubheader.title ]]
                                </a>
                            </h4>
                            <p><i class="text-muted">[[ onesubheader.description ]]</i></p>
                        </div>
                        <div class="col-xs-1">
                            [[ onesubheader.threads.length ]]
                        </div>

                        <div class="col-xs-1" ng-if="onesubheader.threads.posts == undefined">
                            0
                        </div>

                        <div class="col-xs-1" ng-if="onesubheader.threads.posts.length > 0">
                        [[ onesubheader.threads.posts.length ]]
                        </div>
                    </div>
                </div>
                <div style="margin: 5px 0 15px 15px;" ng-if="!(oneheader.addnewsubheader)">
                    <a href="#"  ng-click="oneheader.addnewsubheader = true"> <i class="fa fa-plus"></i>Add new SubHeader </a>
                </div>
                <div ng-if="oneheader.addnewsubheader" style="margin: 5px 0 15px 15px;">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-5">
                                <div class="input-group">
                                    <span class="input-group-addon" id="basic-addon1">Subheader title:</span>
                                    <input type="text" class="form-control" ng-model="quicksubheader.title"  aria-describedby="basic-addon1">
                                </div>
                                <div ng-if="headerForumErrors.subHeaderTitleError == true">
                                    <span  class="label label-danger"> Please fill out this field </span>
                                </div>
                            </div>

                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-5">
                                <div class="input-group">
                                    <span class="input-group-addon" id="basic-addon2">Subheader Description:</span>
                                    <input type="text" class="form-control" ng-model="quicksubheader.description"  aria-describedby="basic-addon2">
                                </div>
                                <div ng-if="headerForumErrors.subHeaderDescriptionError == true">
                                    <span  class="label label-danger"> Please fill out this field </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-3">
                                <div class="input-group">
                                    <span class="input-group-addon" id="basic-addon3">Admin subheader:</span>
                                    <input type="checkbox" class="form-control" ng-model="quicksubheader.admin" aria-describedby="basic-addon3">
                                </div>
                            </div>

                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-2">
                                <div class="btn-group">
                                    <span class="btn btn-success" style="background-color: #337ab7;cursor: pointer;" ng-click="addNewSubHeaderQuick(oneheader,quicksubheader);">Add</span>
                                    <span class="btn btn-danger" style="cursor: pointer;" ng-click="oneheader.addnewsubheader = !(oneheader.addnewsubheader) ;">Close</span>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
            <div style="margin: 5px 0 15px 15px;" ng-if="addnewheader == false">
                <a href="#" ng-click="headerTrue();"> <i class="fa fa-plus"></i>Add new Header </a>
            </div>
            <div ng-if="addnewheader == true" style="margin: 5px 0 15px 15px;">
                <div class="row">
                    <div class="col-md-12">
                        <div class="col-md-5">
                            <div class="input-group">
                                <span class="input-group-addon" id="basic-addon21">Select header background color:</span>
                                <input type="color" class="form-control" ng-model="quickheader.bgColor"  aria-describedby="basic-addon21">
                            </div>
                        </div>

                    </div>
                </div>
                <br/>
                <div class="row">
                    <div class="col-md-12">
                        <div class="col-md-5">
                            <div class="input-group">
                                <span class="input-group-addon" id="basic-addon22">Select header text color:</span>
                                <input type="color" class="form-control" ng-model="quickheader.textColor"  aria-describedby="basic-addon22">
                            </div>
                        </div>
                    </div>
                </div>
                <br/>
                <div class="row">
                    <div class="col-md-12">
                        <div class="col-md-5">
                            <div class="input-group">
                                <span class="input-group-addon" id="basic-addon23">Header title:</span>
                                <input type="text" class="form-control" ng-model="quickheader.title" aria-describedby="basic-addon23">
                            </div>
                            <div ng-if="headerForumErrors.headerTitleError == true">
                                <span  class="label label-danger"> Please fill out this field </span>
                            </div>
                        </div>

                    </div>
                </div>
                <br/>
                <div class="row">
                    <div class="col-md-12">
                        <div class="col-md-2">
                            <div class="btn-group">
                                <span class="btn btn-success" style="cursor: pointer;" ng-click="addNewHeaderQuick(quickheader);">Add</span>
                                <span class="btn btn-danger" style="cursor: pointer;" ng-click="headerFalse();">Close</span>
                            </div>

                        </div>
                    </div>
                </div>

            </div>
        </div>


{% endblock %}
{% block javascripts %}
    {{ parent() }}
<script src="{{ asset('bundles/zectranet/js/custom/headerForumController.js') }}"></script>
<script>
    JSON_URLS.getHeaderForumHeaders = "{{ path('zectranet_get_header_forum_headers', { 'project_id': forum.id } ) }}";
    JSON_URLS.addSubHeaderForumHeaders = "{{ path('zectranet_add_subheader_action', { 'header_id': 0 }) }}";
    JSON_URLS.urlShowHeaderForumSubheader = "{{ path('zectranet_show_header_forum_subheader', {'project_id': forum.id ,'subheader_id': 0 } ) }}";
    JSON_URLS.addHeaderForumHeaders = "{{ path('zectranet_add_header_action', { 'project_id': forum.id }) }}";
</script>
{% endblock %}