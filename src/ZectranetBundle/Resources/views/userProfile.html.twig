{% extends '@Zectranet/index.html.twig' %}

{% block title %}{{ user.username }} Profile{% endblock %}

{% block body %}
    <div class="page-header">
        <i class="fa fa-user fa-2x"></i>
        <span style="font-size: 25px;">Profile Page</span>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="list-group col-md-2">
                <div class="list-group-item active">
                    <span class="text-center">User Avatar:</span>
                </div>
                <div class="list-group-item">
                    <img class="img-rounded center-block" src="{{ asset('') }}documents/{{ user.avatar }}" style="width: auto; max-width: 95%; max-height: 95%;">
                </div>
            </div>

            <div class="col-md-10">
                <div class="row">
                    <div class="col-md-6 list-group">
                        <div class="list-group-item active">
                            Name:
                        </div>
                        <div class="list-group-item" style="margin-bottom: 5px;">
                            {{ user.name }}
                        </div>
                    </div>

                    <div class="col-md-6 list-group">
                        <div class="list-group-item active">
                            Surname:
                        </div>
                        <div class="list-group-item">
                            {{ user.surname }}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 list-group">
                        <div class="list-group-item active">
                            Login:
                        </div>
                        <div class="list-group-item">
                            {{ user.username }}
                        </div>
                    </div>

                    <div class="col-md-6 list-group">
                        <div class="list-group-item active">
                            Country:
                        </div>
                        <div class="list-group-item">
                            <div class="text-info text-center">Under construction</div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div class="list-group col-md-6">
        <div class="list-group-item active">
            <span class="text-center">About Me:</span>
        </div>
        <div class="list-group-item">
            <div class="text-info text-center">Under construction</div>
        </div>
    </div>

    <div class="list-group col-md-6">
        <div class="list-group-item active">
            <span class="text-center">Work Experience:</span>
        </div>
        <div class="list-group-item">
            <div class="text-info text-center">Under construction</div>
        </div>
    </div>

    <div class="list-group col-md-12">
        <div class="list-group-item active">
            <div class="text-center">Daily TimeSheet</div>
        </div>
        <div class="list-group-item">
            {% if user.wde | length == 0 %}
                <h4 class="text-center text-info">WDE will be displayed here</h4>
            {% else %}
                <table class="table">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Date</th>
                        <th>Start In Office</th>
                        <th>Start Lunch</th>
                        <th>End Lunch</th>
                        <th>End In Office</th>
                        <th>Total hours</th>
                        <th>Main Task</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for i in 0..user.wde | length - 1 %}
                        <tr>
                            <td>
                                {{ i + 1 }}
                            </td>
                            <td>
                                {{ user.wde[i].date | date("Y-m-d")  }}
                            </td>
                            <td>
                                {{ user.wde[i].startTime | date("H:i") }}
                            </td>
                            <td>
                                {{ user.wde[i].beginLunch | date("H:i") }}
                            </td>
                            <td>
                                {{ user.wde[i].endLunch | date("H:i") }}
                            </td>
                            <td>
                                {{ user.wde[i].endTime | date("H:i") }}
                            </td>
                            <td>
                                {{ user.wde[i].hours }}
                            </td>
                            <td>
                                {{ user.wde[i].mainTask }}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% endif %}

        </div>
    </div>
{% endblock %}

{% block modals %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}