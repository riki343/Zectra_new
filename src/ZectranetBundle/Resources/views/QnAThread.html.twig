{% extends '@Zectranet/index.html.twig' %}

{% block title %}{{ forum.name }}{% endblock %}

{% block styles %}
    {{ parent() }}

    <link href="{{ asset('bundles/zectranet/css/QnAForum.css') }}" rel="stylesheet" type="text/css">

{% endblock %}

{% block body %}

    <div class="row">
        <ol class="breadcrumb">
            <li>
                <a href="{{ path('zectranet_show_QnA_forum', { 'project_id': forum.id }) }}">{{ forum.name }}</a>
            </li>
        </ol>
    </div>

    <div class="page-header">
        <div class="row">
            <div class="col-md-9">
                <span style="font-size: 22px; font-family: 'PT Sans Narrow', sans-serif;">{{ thread.title }}</span>
            </div>
            <div class="col-md-3">
                {% if forum.ownerID == app.user.id or (is_granted('ROLE_ADMIN')) %}
                    <div class="pull-right">
                        <div class="pull-right" data-toggle="tooltip" data-placement="top" title="Delete This Project">
                            <a style="cursor: pointer; text-decoration: none;" data-toggle="modal" data-target="#delete_QnA_project">
                                <i class="fa text-danger fa-fw fa-trash  fa-2x"></i>
                            </a>
                        </div>

                        <div class="pull-right" data-toggle="tooltip" data-placement="top" title="Project Settings">
                            <a href="{{ path('zectranet_QnA_settings', {'project_id': forum.id}) }}" style="cursor: pointer; text-decoration: none;">
                                <i class="fa text-primary fa-fw fa-gear fa-2x"></i>
                            </a>
                        </div>

                        {#<div class="pull-right" data-toggle="tooltip" data-placement="top" title="Project Profile">
                            <a href="{{ path('zectranet_project_profile_page', {'project_id': forum.id}) }}" style="cursor: pointer; text-decoration: none; font-size: 1.3em;">
                                Profile
                            </a>
                        </div>#}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">

            <div class="post">
                <div class="container-post-message" style="display: inline-block;">
                    <div class="post-message">
                        {{ thread.message }}
                    </div>

                    <div class="right-thread-content thread-keywords" style="margin: 15px 0;">
                        {% for i in 0..keywords | length - 1 %}
                            <span style="color: #0c65a5; margin-left: 3px;">{{ keywords[i] }}</span>
                        {% endfor %}
                    </div>
                </div>

                <div class="informer text-muted" style="display: inline-block; vertical-align: top;">
                    <div>asked {{ thread.date | date('Y-m-d H:i:s') }}</div>

                    <div class="informer-user">
                        <a href="{{ path('zectranet_user_page', {'user_id': thread.user.id}) }}" style="text-decoration: none; vertical-align: top;">
                            <img class="img-responsive" src="{{ asset('') }}documents/{{ thread.user.avatar }}">
                        </a>

                        <a href="{{ path('zectranet_user_page', {'user_id': thread.user.id}) }}" style="text-decoration: none; vertical-align: top;">
                            {{ thread.user.username }}
                        </a>
                    </div>
                </div>

            </div>

        </div>
    </div>

    <div class="page-header">
        <span style="font-size: 22px; font-family: 'PT Sans Narrow', sans-serif;">
            {{ thread.posts | length }}
            {% if thread.posts | length == 1 %}
                Answer
            {% else %}
                Answers
            {% endif %}
        </span>
    </div>

    {% if thread.posts | length == 0 %}
        <div class="thread posts" style="font-size: 1.3em; color: #009beb">
            Answers will be displayed here
        </div>
    {% endif %}

    {% for post in thread.posts %}

        <div class="posts">
            <div class="row">
                <div class="col-md-12">

                    <div class="post">
                        <div class="container-post-message" style="display: inline-block;">
                            <div class="post-message" style="border-bottom: none;">
                                {{ post.message }}
                            </div>
                        </div>

                        <div class="informer text-muted" style="display: inline-block; vertical-align: top;">
                            <div>answer {{ post.posted | date('Y-m-d H:i:s') }}</div>

                            <div class="informer-user">
                                <a href="{{ path('zectranet_user_page', {'user_id': post.user.id}) }}" style="text-decoration: none; vertical-align: top;">
                                    <img class="img-responsive" src="{{ asset('') }}documents/{{ post.user.avatar }}">
                                </a>

                                <a href="{{ path('zectranet_user_page', {'user_id': post.user.id}) }}" style="text-decoration: none; vertical-align: top;">
                                    {{ post.user.username }}
                                </a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    {% endfor %}

    <div class="col-md-12">
        <form class="posts" action="{{ path('zectranet_QnA_add_post', { 'thread_id': thread.id }) }}" method="post">
            <div class="input-group">
                <textarea style="resize: vertical;" name="message" class="form-control" rows="3"></textarea>
                <div class="input-group-addon" style="padding: 0;">
                    <button type="submit" class="btn btn-default btn-primary" style="width: 72px; height: 72px;">
                        Answer
                    </button>
                </div>
            </div>
        </form>
    </div>


    <div class="modal fade" id="delete_QnA_project" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header label-danger">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel" style="color: #f5f5f5;">
                        Delete Project
                    </h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <div class="header">
                            <h3 class="text-center">Are you really want to delete this project?</h3><br>
                        </div>
                    </div>
                    <div class="form-group">
                        <a class="btn btn-danger" href="{{ path('zectranet_delete_QnA_forum', {'project_id': forum.id }) }}">Delete</a>
                        <a class="btn btn-default" data-dismiss="modal" aria-hidden="true">Close</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}